// Prisma schema file
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Read It Later機能のデータモデル
model ReadItLaterItem {
  id          String   @id @default(uuid())
  url         String
  description String?
  category    String   // "youtube" | "other" (将来拡張可能)
  tags        String[] // タグ配列
  createdAt   DateTime @default(now())
}
